<h1>Say hey.</h1>
{{#if error}}
  <p class="error">{{error}}</p>
{{/if}}
<form id="contact-form" action="/contact/action/form" method="post" novalidate>
  <input type="hidden" name="first_int" value="{{verification.firstInt}}">
  <input type="hidden" name="second_int" value="{{verification.secondInt}}">
  <ul class="data">
    <li class="name text required">
      <label for="name">
        Name
      </label>
      <input id="name" name="name" value="{{form.name}}" required />
    </li>
    <li class="email text required">
      <label for="email">
        E-mail
      </label>
      <input id="email" name="email" type="email" value="{{form.email}}" required />
    </li>
    <li class="subject text required">
      <label for="subject">
        Subject
      </label>
      <input id="subject" name="subject" value="{{form.subject}}" required />
    </li>
    <li class="message textarea required">
      <label for="message">
        Message
      </label>
      <textarea id="message" name="message" rows="5" required>{{form.message}}</textarea>
    </li>
    <li class="verification select">
      <label for="verification">What's {{verification.firstInt}} plus {{verification.secondInt}}?</label>
      <select name="verification" id="verification">
        <option value="0">0</option>
        {{#each verification.options}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
    </li>
    <li class="cc checkbox">
      <input type="checkbox" name="cc" id="cc" {{#if form.cc}} checked {{/if}}>
      <label for="cc">
        Send me a copy
      </label>
    </li>
  </ul>
  <ul class="actions">
    <li class="submit primary-action">
      <input id="submit" name="submit" type="submit" value="Send your message" />
    </li>
  </ul>
</form>
